<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_horizontal_margin"
        android:layout_marginEnd="@dimen/list_item_horizontal_margin"
        android:layout_marginBottom="@dimen/list_item_vertical_margin"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/issuer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/list_item_title_subtitle_vertical_margin"
                android:textSize="@dimen/list_item_title_text_size"
                android:textColor="@android:color/primary_text_light"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/issuedDate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/list_item_subtitle_text_size"
                android:textColor="@android:color/primary_text_light"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/item1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/list_item_subtitle_text_size"
                android:textColor="@android:color/primary_text_light"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/item2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/list_item_subtitle_text_size"
                android:textColor="@android:color/primary_text_light"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/item3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/list_item_subtitle_text_size"
                android:textColor="@android:color/primary_text_light"
                android:gravity="center_vertical" />

        </LinearLayout>

        <ImageView
            android:id="@+id/action_button"
            android:layout_width="24dp"
            android:visibility="invisible"
            android:layout_height="24dp"
            android:layout_weight="0"
            android:layout_marginStart="@dimen/list_item_horizontal_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_chevron"
            android:contentDescription="@string/next_button_content_description"
            android:scaleType="center"/>

    </LinearLayout>


</LinearLayout>